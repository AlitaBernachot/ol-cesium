{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["es2023", "dom"],
      "allowJs": true,
      //"checkJs": true,
      "baseUrl": "./",
      "skipLibCheck": true,
      "moduleResolution": "Node",
      "verbatimModuleSyntax": true,
      "outDir": "./out",
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
        "ol/*": ["node_modules/ol/*"]
      },
      "declaration": true,
      "declarationDir": "./types"
    },
    "include": [
      "src/**/*.js",
      "src/**/*.ts",
      "node_modules/cesium/Source/Cesium.d.ts"
    ],
    "typeAcquisition": {
      "exclude": ["cesium"]
    }
}
